<div class="mb-3 card card-body">
    <%= tweet.body %>
    <div class="me-4">
        <%= image_tag tweet.twitter_account.image, class: "rounded-circle" %>
        <%= link_to "@#{tweet.twitter_account.name}", "http://twitter.com/#{tweet.twitter_account.username}", target: :_blank %>
        <% if tweet.published? %>
            <%= link_to "View Tweet", "http://twitter.com/#{tweet.twitter_account.username}/status/#{tweet.tweet_id}", target: :_blank %>
        <% else %>
            Schedule at <%= l tweet.publish_at, format: :long %>
            <%= link_to "Edit Tweet", edit_tweet_path(tweet) %>
            |
            <%= link_to "Delete Tweet", tweet_path(tweet), method: :delete %>
        <% end %>
    </div>
</div>