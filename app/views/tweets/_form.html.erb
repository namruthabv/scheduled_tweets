<%= form_with model: tweet do |form| %>
    <div class="mb-3">
        <%= form.label :twitter_account_id %>
        <%= form.collection_select :twitter_account_id, Current.user.twitter_account, :id, :username, {}, {class: "form-control"} %>
        <%= link_to "Connect Twitter Account", "auth/twitter", method: :post %>
    </div>

    <div class="mb-3">
        <%= form.label :body %>
        <%= form.text_area :body, class: "form-control" %>
    </div>

    <div class="mb-3">
        <%= form.label :publish_at %>
        <%= form.datetime_select :publish_at, class: "form-control" %>
    </div>

    <%= form.submit "Schedule Tweet", class: "btn btn-secondary" %>

    <% if form.object.persisted? %>
        <%= link_to "Delete", form.object, method: :delete, data: {confirm: "Are you sure? "}, class: "btn btn-outline-danger" %>
    <% end %>
    
<% end %>