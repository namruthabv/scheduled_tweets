<div class="d-flex align-items-center justify-content-between">
    <h1> Twitter Accounts </h1>
    <%= button_to "Connect Twitter Account", "auth/twitter", method: :post, class: "btn btn-primary" %>
</div>

<% @twitter_accounts.each do |twitter_acc| %>
    <div class="d-flex align-items-center mb-4">
        <div class="me-4">
            <%= image_tag twitter_acc.image, class: "rounded-circle" %>
            <%= link_to "@#{twitter_acc.name}", "https://twitter.com/#{twitter_acc.username}", target: :_blank %>
        </div>
        <%= button_to "Disconnect", twitter_acc, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-secondary" %>
    </div>
<% end %>